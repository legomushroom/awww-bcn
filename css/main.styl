@import 'assets/imports.styl'
@import 'css-assets/normalize.styl'

@import 'css-assets/general'
@import 'css-assets/elements'
@import 'css-assets/blocks'
@import 'css-assets/layouts'
@import 'css-assets/effects'
@import 'css-assets/icons'

c-green = #00FFC6
c-grey  = #383838
c-yellow = #FFED00

body
	background #383838
	font-family 'Open sans', sans-serif

width = 2px
.line
	width width
	height 0
	nw 50%
	margin-left -(width/2)
	background c-green
	transform-origin center bottom

.bubble
	rect 24px
	border 12px solid c-green
	border-radius 50%
	nw 50%
	opacity 0

.bubbles
	rect 100%
	nw 0
	margin-top -100px
	margin-left -10px

height = 240px
.easy
	nw 50%
	rect height
	line-height height
	background c-green
	border-radius 50%
	text-align center
	transform translate(-50%, -50%)
	font-size 60px
	color c-grey
	text-transform uppercase
	z-index 11
	rect 0
	overflow hidden
	font-weight 900
	letter-spacing -4px

	&__wrapper
		rect 100%
		nw 0
	&__text
		rect 100%
		font-weight 800
		letter-spacing 1px
	&__line
		rect 100%
		border-radius 50%
		// background-color #FFEF00
		// background-color white
		// background-color #383838
		border 4px solid #383838
		// border 4px solid white
		z-index 0
		transform translate(-50%)
		// &--top
		// 	nw 50%
		// &--bottom
		// 	bottom -10%
		// 	left 100%

.drop
	rect 4px
	nw 50%
	opacity 0

.spark
	background c-green
	opacity 0
	border-radius 50%

.thunder-bg
	background c-green
	opacity 0
	rect 100%
	nw 0
	z-index 0

.arrow
	width 2px
	height 200px
	transform-origin center bottom
	background c-green
	top -100%
	left 50%
	margin-top -175px

	&--center
		margin-left -28px
		margin-top -120px
	&--wrap
		rect 100%
		nw 0
		margin-top 0
		// rect auto
		background transparent

.car
	height 10px
	width 40%
	opacity 0
	// border-radius 50%
	&--1
		right 100%
		top 40%
		border-top-left-radius 50%
		border-bottom-left-radius 50%
	&--2
		left 100%
		top: 60%
		border-top-right-radius 50%
		border-bottom-right-radius 50%

.text
	font-family 'Open Sans'
	font-size 60px
	text-transform uppercase
	font-weight 100
	text-align center
	letter-spacing 10px
	&--fast
		rect 100%
		nw 0
	&--robust
		// border 1px solid deeppink
		nw 50%
		margin-left 270px
		z-index 8
		overflow hidden
		transform-origin left bottom
		transform skewX(-20deg) translateX(-231px)
		width 380px
		height 60px
		opacity: 0
		font-family 'Open Sans', sans-serif
		&__text
			transform skewX(20deg)
			font-family 'Open Sans', sans-serif
			left -281px

	// .ie9 &
	// 	font-size 52.5px

	step = 45px
	&__bit
		nw 50%
		&--1
			margin-left -(2*step)
		&--2
			margin-left -(step)
		&--3
			margin-left 0
		&--4
			margin-left step
		&--5
			margin-left 2*step
		&__inner
			display inline-block
			position static
			transform-origin center bottom
		span
			display inline-block
			margin-top -30px

.c-green-g
	background c-green

.c-green-c-g
	color c-green

.c-grey-g
	background c-grey

.c-red-g
	background deeppink

.circle
	border-radius 50%

.center
	nw 50%

.a-g
	position absolute

div
	position absolute
	z-index 10
	font-family 'Open sans', sans-serif

.screen
	position absolute
	nw 0
	rect 100%
	&--robust
		z-index 1
	&--easy
		z-index 12
	&--logos
		z-index 20

.inherit-bg
	background inherit

.velocity
	position absolute
	opacity 0
	nw 50%
	color c-green
	font-size 70px
	text-transform uppercase
	font-weight 100
	margin-left (1220)px
	min-width 650px
	margin-top  -40px
	transform translateX(-160px)
	white-space nowrap
	span
		display inline-block

